<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hassanshahid.estate">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MapActivity"
            android:label="@string/app_name"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/NoActionBar"/>
        <activity
            android:name=".SecondScreen"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".MobileVerification"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".PropertySubmit"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".Signup"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".SaleSubmitProperty"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".IconTextTabsActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".SearchProperty"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".ProfilePage"
            android:theme="@style/NoActionBar" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

    </application>

</manifest>