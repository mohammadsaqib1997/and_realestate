<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/interior_design">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="167dp"
            android:layout_marginTop="108dp"
            android:contentDescription=""
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/genymotion"
            tools:ignore="ContentDescription"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Property"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/textColorPrimary"
            android:drawableLeft="@drawable/ic_note_add_black_24dp"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true" />
        <!--android:background="@drawable/btn_diff"-->
        <!--android:background="@drawable/btn_diff1"-->


        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/textColorPrimary"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:text="SEARCH"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/button2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp" />




    </RelativeLayout>
</LinearLayout>