<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="167dp"
            android:contentDescription=""
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/genymotion"
            tools:ignore="ContentDescription"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/editText9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Please Enter a valid email in field below and press 'SEND' button. An automated email shall be generated to the specified email address with instructions of resetting password"
            android:inputType="textMultiLine"
            android:textSize="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textAlignment="center"
            android:textColor="#B2B8B9"
            android:background="@android:color/transparent"
            android:layout_marginTop="139dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/editText11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText9"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:textColorHint="#B2B8B9"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/button10"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/editText11"
            android:background="@color/colorPrimary"
            android:textColor="@color/textColorPrimary"
            android:layout_marginTop="26dp"
            android:text="Send"
            android:layout_alignEnd="@+id/editText11"
            android:layout_alignStart="@+id/editText11" />
        <!--android:background="@drawable/btn_diff1"-->


    </RelativeLayout>
</ScrollView>