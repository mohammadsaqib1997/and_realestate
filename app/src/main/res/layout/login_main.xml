<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reformadas41_1g">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background">

        <EditText
            android:id="@+id/editText12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/editText13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_below="@+id/editText12"
            android:layout_alignStart="@+id/editText12" />



        <CheckBox
            android:id="@+id/checkBox19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editText13"
            android:layout_below="@+id/editText13"
            android:text="Remember me?" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="167dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="19dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:contentDescription=""
            app:srcCompat="@drawable/genymotion"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/editText16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="15sp"
            android:background="@android:color/transparent"
            android:inputType="textPersonName"
            android:text="Forgot Password?"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:layout_below="@+id/checkBox19"
            android:layout_alignStart="@+id/checkBox19" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/textColorPrimary"

            android:layout_marginTop="10dp"
            android:layout_below="@+id/editText16"
            android:layout_alignStart="@+id/editText16"
            android:layout_alignEnd="@+id/editText13" />
        <!--android:background="@drawable/btn_diff"-->

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button7"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/textColorPrimary"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:text="Create Account" />
        <!--android:background="@drawable/btn_diff1"-->


    </RelativeLayout>
</ScrollView>